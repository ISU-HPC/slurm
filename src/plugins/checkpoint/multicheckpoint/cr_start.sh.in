#This is the main function
#$1: name of the checkpoint library to use
#returns: 0 on success, other if not
startCheckpointedJob(){
  if [ "$1" == "BLCR" ]
  then
    startBLCRCheckpointedJob $2
    return 0
  elif [ "$1" == "DMTCP" ]
  then
    startDMTCPCheckpointedJob $2
    return 0
  elif [ "$1" == "CRIU" ]
  then
    startCRIUCheckpointedJob $2
    return 0
  fi
  return 1
}


